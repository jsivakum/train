<% if @lines.name().any?() %>
<h3>Here are all the trains in this list:</h3>

<ul>
  <% @lines.name().each() do |line| %>
  <li><%= line.name() %></li>
  <% end %>
</ul>
<%else %>
<p>There are no trains yet!</p>
<% end %>

<hr>

<% if @stations.name().any?() %>
<h3>Here are all the trains in this list:</h3>

<ul>
  <% @stations.name().each() do |station| %>
  <li><%= station.name() %></li>
  <% end %>
</ul>
<%else %>
<p>There are no stations yet!</p>
<% end %>

<hr>

<a href="/">Go to conductor's page to add lines and stations</a>
